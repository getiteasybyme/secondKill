    seckill_id, product_name, product_id, seckill_price, begin_time, end_time
  </sql>
  <select id="selectByProductId" resultType="com.secondKill.vo.SeckillInformationVo">
    select
    s.seckill_id, s.product_name, s.product_id, s.seckill_price, s.begin_time, s.end_time,
    p.inventory
    from seckill as s, product as p
    where s.product_id = #{productId} and s.product_id = p.product_id
  </select>

